<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <input type="button" onclick="tuichu()" value="退出">

    <script src="/javascripts/jquery.1.8.3.min.js"></script>
    <script>
      
    function tuichu(){
      $.post("/users/signout",function(data){

        if(data.state==1){
          alert("退出成功");
          location.href="/users/signin";
        }else{
          alert("退出失败");
        }
      });
    }
    </script>
  </body>
</html>
